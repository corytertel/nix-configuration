WindowTitle {Time}
WindowSize  90 270
Colorset 9
Font "xft:FantasqueSansMono Nerd Font:size=12" 

Init
 Begin
  Set $Title = (GetOutput {exec echo "ï€— "} 1 -1)
  Set $Hour = (GetOutput {exec date "+%I"} 1 -1)
  Set $Minute = (GetOutput {exec date "+%M"} 1 -1)
  Set $Second = (GetOutput {exec date "+%S"} 1 -1)
  Set $AmPm = (GetOutput {exec date "+%p"} 1 -1)

  ChangeTitle 1 $Title
  ChangeTitle 2 $Hour
  ChangeTitle 3 $Minute
  ChangeTitle 4 $Second
  ChangeTitle 5 $AmPm
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 1)==0 Then
  Begin
    Set $Hour = (GetOutput {exec date "+%I"} 1 -1)
    Set $Minute = (GetOutput {exec date "+%M"} 1 -1)
    Set $Second = (GetOutput {exec date "+%S"} 1 -1)
    Set $AmPm = (GetOutput {exec date "+%p"} 1 -1)

    ChangeTitle 2 $Hour
    ChangeTitle 3 $Minute
    ChangeTitle 4 $Second
    ChangeTitle 5 $AmPm
  End
End

Widget 1
Property
 Position 0 10
 Size 90 50
 Font "xft:FantasqueSansMono Nerd Font:size=12"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

