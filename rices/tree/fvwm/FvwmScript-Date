WindowTitle {Date}
WindowSize  90 220
Colorset 9
Font "xft:FantasqueSansMono Nerd Font:size=12" 

Init
 Begin
  Set $Title = (GetOutput {exec echo "ÔÅ≥ "} 1 -1)
  Set $Month = (GetOutput {exec date "+%m"} 1 -1)
  Set $Day = (GetOutput {exec date "+%d"} 1 -1)
  Set $Year = (GetOutput {exec date "+%y"} 1 -1)

  ChangeTitle 1 $Title
  ChangeTitle 2 $Month
  ChangeTitle 3 $Day
  ChangeTitle 4 $Year
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 60)==0 Then
  Begin
    Set $Month = (GetOutput {exec date "+%m"} 1 -1)
    Set $Day = (GetOutput {exec date "+%d"} 1 -1)
    Set $Year = (GetOutput {exec date "+%y"} 1 -1)

    ChangeTitle 2 $Month
    ChangeTitle 3 $Day
    ChangeTitle 4 $Year
  End
End

Widget 1
Property
 Position 0 10
 Size 90 50
 Font "xft:FantasqueSansMono Nerd Font:size=12"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

