WindowTitle {DateTime}
WindowSize  90 400
Colorset 9
Font "xft:FantasqueSansMono Nerd Font:size=12" 

Init
 Begin
  Set $Hour = (GetOutput {exec date "+%I"} 1 -1)
  Set $Minute = (GetOutput {exec date "+%M"} 1 -1)
  Set $Second = (GetOutput {exec date "+%S"} 1 -1)
  Set $AmPm = (GetOutput {exec date "+%p"} 1 -1)
  Set $Month = (GetOutput {exec date "+%m"} 1 -1)
  Set $Day = (GetOutput {exec date "+%d"} 1 -1)
  Set $Year = (GetOutput {exec date "+%y"} 1 -1)

  ChangeTitle 1 $Hour
  ChangeTitle 2 $Minute
  ChangeTitle 3 $Second
  ChangeTitle 4 $AmPm
  ChangeTitle 5 $Month
  ChangeTitle 6 $Day
  ChangeTitle 7 $Year
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 1)==0 Then
  Begin
    Set $Hour = (GetOutput {exec date "+%I"} 1 -1)
    Set $Minute = (GetOutput {exec date "+%M"} 1 -1)
    Set $Second = (GetOutput {exec date "+%S"} 1 -1)
    Set $AmPm = (GetOutput {exec date "+%p"} 1 -1)
    Set $Month = (GetOutput {exec date "+%m"} 1 -1)
    Set $Day = (GetOutput {exec date "+%d"} 1 -1)
    Set $Year = (GetOutput {exec date "+%y"} 1 -1)

    ChangeTitle 1 $Hour
    ChangeTitle 2 $Minute
    ChangeTitle 3 $Second
    ChangeTitle 4 $AmPm
    ChangeTitle 5 $Month
    ChangeTitle 6 $Day
    ChangeTitle 7 $Year
  End
End

Widget 1
Property
 Position 0 10
 Size 90 50
 Font "xft:FantasqueSansMono Nerd Font:size=12"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

