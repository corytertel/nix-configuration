WindowTitle {DateTime}
WindowSize  160 60
Colorset 9
Font "xft:Tinos Nerd Font:size=10" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%I:%M:%S %p"} 1 -1)
  Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 1)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%I:%M:%S %p"} 1 -1)
   Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 0 0
 Size 160 35
 Font "xft:Tinos Nerd Font:size=12"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

Widget 2
Property
 Position 0 35
 Size 160 25
 Font "xft:Tinos Nerd Font:size=9"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
