set default-bg                  "#fefefe" # Background
set default-fg                  "#30343f" # Foreground

set render-loading              true
set render-loading-fg           "#fefefe" # Background
set render-loading-bg           "#30343f" # Foreground

# Startup options
#
#
set adjust-open width
set recolor false
