WindowTitle {Battery}
WindowSize  90 120
Colorset 9
Font "xft:Tinos Nerd Font:size=12" 

Init
 Begin
  Set $Title = (GetOutput {exec echo "ï‰„ "} 1 -1)
  Set $Battery = (GetOutput {exec acpi --battery | tr "," "\n" | grep % | tr -d % | xargs} 1 -1)
  ChangeTitle 1 $Title
  ChangeTitle 2 $Battery
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
    Set $Battery = (GetOutput {exec acpi --battery | tr "," "\n" | grep % | tr -d % | xargs} 1 -1)
    ChangeTitle 2 $Battery
  End
End

Widget 1
Property
 Position 0 10
 Size 80 50
 Font "xft:Tinos Nerd Font:size=12"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

