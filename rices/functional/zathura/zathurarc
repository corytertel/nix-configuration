set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-home-tilde true
set adjust-open "best-fit"

set font "NotoSans Nerd Font 10"
# Light/Default mode settings:
#
#
set notification-error-bg       "#e60909" # Red
set notification-error-fg       "#ffffff" # Foreground
set notification-warning-bg     "#ed8f23" # Orange
set notification-warning-fg     "#ffffff" # Selection
set notification-bg             "#cccccc" # Background
set notification-fg             "#141404" # Foreground

set completion-bg               "#ffffff" # Background
set completion-fg               "#141404" # Comment
set completion-group-bg         "#ffffff" # Background
set completion-group-fg         "#141404" # Comment
set completion-highlight-bg     "#cccccc" # Selection
set completion-highlight-fg     "#141404" # Foreground

set index-bg                    "#ffffff" # Background
set index-fg                    "#141404" # Foreground
set index-active-bg             "#cccccc" # Current Line
set index-active-fg             "#141404" # Foreground

set inputbar-bg                 "#ffffff" # Background
set inputbar-fg                 "#141404" # Foreground
set statusbar-bg                "#ffffff" # Background
set statusbar-fg                "#141404" # Foreground

set highlight-color             "#2d9574" # Teal
set highlight-active-color      "#e01bd0" # Pink

set default-bg                  "#ffffff" # Background
set default-fg                  "#141404" # Foreground

set recolor-lightcolor          "#ffffff" # Background
set recolor-darkcolor           "#141404" # Foreground

set render-loading              true
set render-loading-bg           "#ffffff" # Background
set render-loading-fg           "#141404" # Foreground

# Startup options
#
#
set recolor true
set recolor-keephue
set guioptions ""

map <C-Tab> toggle_statusbar
map \< goto top
map \> goto bottom
map b navigate previous
map e follow
map f navigate next
map p goto top

map <C-+> zoom in
map <C--> zoom out
map <C-=> zoom in
map <C-)> adjust_window best-fit
map <C-0> adjust_window width
map <C-a> scroll full-left
map <C-b> scroll left
map <C-e> scroll full-right
map <C-f> scroll right
map <C-g> abort
map <C-n> scroll down
map <C-p> scroll up
map <C-v> scroll full-down

map <A-\<> goto top
map <A-\>> goto bottom
map <A-v> scroll full-up